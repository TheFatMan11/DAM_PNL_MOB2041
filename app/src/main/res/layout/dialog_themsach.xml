<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#C2FCFD"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="10dp"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm sách"
        android:textColor="#7E4AD6"
        android:textStyle="bold"
        android:textSize="32dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Tên sách"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập tên"
            android:id="@+id/edt_tenSach"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Loại sách"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập loại"
            android:id="@+id/edt_loaiSach"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Tác giả"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập tên tác giả"
            android:id="@+id/edt_tacGia"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Ngày xuất bản"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập tên xuất bản"
            android:id="@+id/edt_ngayXuatban"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Giá"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập giá"
            android:id="@+id/edt_gia"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Thêm"

        android:textStyle="bold"
        android:background="@drawable/shape_buton_mo"
        android:textColor="@color/white"
        android:id="@+id/bnt_add_sach"/>
</LinearLayout>
</androidx.cardview.widget.CardView>
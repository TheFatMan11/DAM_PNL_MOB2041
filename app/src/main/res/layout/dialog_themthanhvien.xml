<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#C2FCFD"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="10dp"
    >
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm thành viên"
        android:textColor="#7E4AD6"
        android:textStyle="bold"
        android:textSize="32dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Tên thành viên"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập họ tên"
            android:id="@+id/edt_hoten"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Tên đăng nhập"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập tên đăng nhập"
            android:id="@+id/edt_tenDangnhap"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Mật khẩu"/>
       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:passwordToggleEnabled="true"
           android:id="@+id/tl_pass"
           >
           <EditText
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:hint="Hãy nhập mật khẩu"
               android:id="@+id/edt_pass"
               android:background="@drawable/shape_edt"
               android:paddingLeft="10dp"
               />
       </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Nhập lại mật khẩu"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:id="@+id/tl_repass"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Hãy nhập mật khẩu"
                android:id="@+id/edt_rePass"
                android:background="@drawable/shape_edt"
                android:paddingLeft="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Địa chỉ"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập địa chỉ"
            android:id="@+id/edt_diaChi"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9D75F2"
            android:textStyle="bold"
            android:text="Email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Hãy nhập email"
            android:id="@+id/edt_email"
            android:background="@drawable/shape_edt"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:textStyle="bold"
        android:background="@drawable/shape_buton_mo"
        android:textColor="@color/white"
        android:id="@+id/bnt_add_thanhvien"/>
</LinearLayout>
</androidx.cardview.widget.CardView>